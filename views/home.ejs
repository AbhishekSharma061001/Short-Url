<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <% if(locals.id) { %>
    <p>URL Generated : http://localhost:8000/<%= locals.id %></p>
    <% } %>
    <h1>URL - SHORTNER</h1>
    <div>
        <form action="/url" method="POST">
            <label>Enter the Original URL : </label>
            <input type="text" name="URL" placeholder="https://example.com">
            <button type="submit">Shorten</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Shorten URL</th>
                        <th>Original URL</th>
                        <th>Total Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% locals.urls.forEach((url,index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                     
                    <% }) %>

                </tbody>
            </table>   
        <% } %>
    </div>
</body>
</html>